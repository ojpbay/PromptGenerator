<Window x:Class="PromptContextGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PromptContextGenerator"
        mc:Ignorable="d"
        Title="Prompt Context Generator" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top row with input textbox and generate button -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="userInput" 
                     Grid.Column="0"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0"
                     Text="I am going to Paris, what should I see?"/>
            
            <Button x:Name="GenerateButton"
                    Grid.Column="1"
                    Width="120" 
                    Height="30"
					Background="#0078D7"
					Foreground="White"
                    Click="GenerateButton_Click">
                <Button.Content>
                    <Grid>
                        <!-- Normal button content -->
                        <TextBlock x:Name="buttonText" 
                                   Text="Generate" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                        
                        <!-- Loading content -->
                        <StackPanel x:Name="loadingContent" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">

                            <!-- Small spinning circle -->
                            <Grid Width="14" Height="14" Margin="0,0,8,0">
                                <Ellipse Width="14" Height="14"
                                         Stroke="Red"
                                         StrokeThickness="2"
                                         StrokeDashArray="10,3"
                                         RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform x:Name="buttonSpinnerRotation"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                            
                            <!-- Loading text -->
                            <TextBlock Text="Loading..." 
                                       Foreground="Gray"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Button.Content>
            </Button>
        </Grid>
        
        <!-- Results textbox that fills the remaining space -->
        <TextBox x:Name="results"
                 Grid.Row="1"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Background="#F8F8F8"/>
    </Grid>
</Window>